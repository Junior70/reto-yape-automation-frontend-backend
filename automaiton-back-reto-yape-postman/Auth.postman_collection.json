{
	"info": {
		"_postman_id": "9d5e9326-0ed8-4c82-be42-a11a20c339dc",
		"name": "Auth",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "CreateToken",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"\r",
							"if (responseCode.code==200){\r",
							"var oauthJson = JSON.parse(responseBody);\r",
							"//Guarda los datos como variables del token en la variables de entorno\r",
							"\r",
							"postman.setEnvironmentVariable(\"token\", oauthJson.token);\r",
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Validate data structure = token\", function () {\r",
							"     pm.expect(pm.response.json()).to.have.ownProperty(\"token\");\r",
							"});\r",
							"\r",
							"//Validamos el tipo de dato de la structura\r",
							"pm.test (\"Validate data type structure\",()=>{\r",
							"        pm.expect(oauthJson.token).to.be.an(\"string\");        \r",
							"})\r",
							"}else if (responseCode.code==404){\r",
							"    \r",
							"    pm.test(\"El parametro ingresado no existe y Status code is 404\", function () {\r",
							"    pm.response.to.have.status(404);\r",
							"    });\r",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\" : \"admin\",\n    \"password\" : \"password123\"\n}"
				},
				"url": {
					"raw": "{{BASEURL}}/auth",
					"host": [
						"{{BASEURL}}"
					],
					"path": [
						"auth"
					]
				}
			},
			"response": []
		}
	]
}